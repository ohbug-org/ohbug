{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "version": "lerna version",
    "publish": "lerna publish --from-git",
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "format": "prettier --write '**/*.{js,ts,md,json}'",
    "lint": "eslint --fix packages/**/*.{ts,tsx}",
    "test": "jest --config ./jest.config.js",
    "update:deps": "pnpm update -i --latest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@chenyueban/lint": "^1.7.0",
    "@chenyueban/tsconfig": "^0.2.5",
    "@commitlint/cli": "^16.1.0",
    "@testing-library/dom": "^8.3.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.0",
    "@types/jest": "^27.0.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "^0.14.21",
    "eslint": "^8.8.0",
    "execa": "^6.0.0",
    "husky": "^7.0.4",
    "jest": "^27.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.0",
    "tsup": "^5.11.13",
    "typescript": "^4.4.2",
    "unbuild": "^0.6.9"
  }
}
