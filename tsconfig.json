{
  "extends": "./node_modules/@chenyueban/tsconfig/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ES6",
    "baseUrl": "./packages",
    "isolatedModules": true,
    "paths": {
      "@ohbug/*": ["packages/*/src"]
    }
  },
  "include": [
    "packages/**/*",
    "scripts/**/*",
    "test/**/*",
    "jest.config.js",
    "tsup.config.ts"
  ],
  "exclude": ["node_modules/", "dist/"]
}
